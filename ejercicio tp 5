#include <iostream>
using namespace std;

int main ()
{
	int radio , perimetro , area ;
	const  float  pi = 3.1416;
	cout<< "ingrese el radio : "<< endl;
	cin>> radio ;
	
	
	perimetro = 2*(pi)*radio ;
	
	area = pi * radio ;
	
	cout<< " el area es: "<< area<<endl<< "el perimetro es: "<< perimetro<< endl;
	
	
	
	
	
	
}
